{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build SFML Project (Dynamic)",
            "command": "E:\\GCC14.2.0\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}\\*.cpp",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-IE:\\SFML3.0.2\\include",
                "-LE:\\SFML3.0.2\\lib",
                "-lsfml-graphics",
                "-lsfml-window", 
                "-lsfml-system",
                "-lsfml-audio",
                "-lsfml-network"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "SFML 动态链接构建任务"
        },
        {
            "type": "cppbuild",
            "label": "Build SFML Project (Static Debug)",
            "command": "E:\\GCC14.2.0\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-DSFML_STATIC",
                "${workspaceFolder}\\*.cpp",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-IE:\\SFML3.0.2\\include",
                "-LE:\\SFML3.0.2\\lib",
                "-lsfml-graphics-s-d",
                "-lsfml-window-s-d", 
                "-lsfml-system-s-d",
                "-lsfml-audio-s-d",
                "-lsfml-network-s-d",
                "-lfreetyped",
                "-lFLACd",
                "-lvorbisd",
                "-lvorbisencd",
                "-loggd"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "SFML 静态调试构建任务"
        },
        {
            "type": "shell",
            "label": "Run SFML Program",
            "command": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": "Build SFML Project (Dynamic)",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}